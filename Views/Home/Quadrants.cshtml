@model IEnumerable<Mission08.Models.Task>

@{
    ViewData["Title"] = "Quadrants";

    // TaskController.Index already filters incomplete,
    // but this keeps the view safe if that ever changes.
    var active = Model.Where(t => !t.IsCompleted);

    var q1 = active.Where(t => t.Quadrant == "1").OrderBy(t => t.DueDate ?? DateTime.MaxValue).ToList();
    var q2 = active.Where(t => t.Quadrant == "2").OrderBy(t => t.DueDate ?? DateTime.MaxValue).ToList();
    var q3 = active.Where(t => t.Quadrant == "3").OrderBy(t => t.DueDate ?? DateTime.MaxValue).ToList();
    var q4 = active.Where(t => t.Quadrant == "4").OrderBy(t => t.DueDate ?? DateTime.MaxValue).ToList();
}

<h2 class="text-center mb-4">Time Management Matrix</h2>

<div class="container">
    <div class="row g-3">

        <!-- Quadrant 1 -->
        <div class="col-md-6">
            <div class="card border-danger h-100">
                <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
                    <span class="fw-bold">Quadrant 1 (Important / Urgent)</span>
                    <a class="btn btn-light btn-sm" asp-controller="Task" asp-action="Create">Update</a>
                </div>
                <div class="card-body">
                    @if (!q1.Any())
                    {
                        <p class="text-muted mb-0">No tasks</p>
                    }
                    else
                    {
                        @foreach (var t in q1)
                        {
                            <div class="border rounded p-2 mb-2 d-flex justify-content-between align-items-start">
                                <div class="me-2">
                                    <div class="fw-semibold">@t.TaskName</div>
                                    <small class="text-muted">
                                        Category: @t.Category
                                        @if (t.DueDate != null)
                                        {
                                            <span> • Due: @t.DueDate?.ToString("MMM d, yyyy")</span>
                                        }
                                    </small>
                                </div>

                                <div class="d-flex gap-2">
                                    <a class="btn btn-sm btn-outline-success"
                                       asp-controller="Task"
                                       asp-action="Complete"
                                       asp-route-id="@t.id">
                                        Complete
                                    </a>

                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-controller="Task"
                                       asp-action="Edit"
                                       asp-route-id="@t.id">
                                        Edit
                                    </a>

                                    <form asp-controller="Task" asp-action="Delete" method="post" class="m-0"
                                          onsubmit="return confirm('Delete this task?');">
                                        <input type="hidden" name="id" value="@t.id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>

        <!-- Quadrant 2 -->
