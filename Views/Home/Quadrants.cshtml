@model IEnumerable<Mission08.Models.Task>

@{
    ViewData["Title"] = "Quadrants";

    var active = Model.Where(t => !t.IsCompleted);

    var q1 = active.Where(t => t.Quadrant == "1").ToList();
    var q2 = active.Where(t => t.Quadrant == "2").ToList();
    var q3 = active.Where(t => t.Quadrant == "3").ToList();
    var q4 = active.Where(t => t.Quadrant == "4").ToList();
}

<h2 class="text-center mb-4">Time Management Matrix</h2>

<div class="container">
    <div class="row">

        <!-- Quadrant 1 -->
        <div class="col-md-6 mb-4">
            <div class="card border-danger h-100">
                <div class="card-header bg-danger text-white fw-bold">
                    Quadrant 1 (Important / Urgent)
                </div>
                <div class="card-body">
                    @foreach (var t in q1)
                    {
                        <div class="mb-3 p-2 border rounded">

                            <strong>@t.TaskName</strong><br />
                            <small>Category: @t.Category</small><br />
                            <small>Due: @(t.DueDate?.ToShortDateString())</small>

                            <div class="mt-2 d-flex gap-2">

                                <!-- Complete -->
                                <form asp-action="Complete" method="post">
                                    <input type="hidden" name="id" value="@t.id" />
                                    <button class="btn btn-sm btn-success">Complete</button>
                                </form>

                                <!-- Edit -->
                                <a asp-action="Edit"
                                   asp-route-id="@t.id"
                                   class="btn btn-sm btn-primary">
                                    Edit
                                </a>

                                <!-- Delete -->
                                <form asp-action="Delete" method="post">
                                    <input type="hidden" name="id" value="@t.id" />
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>

                            </div>
                        </div>
                    }

                    @if (!q1.Any())
                    {
                        <p class="text-muted">No tasks</p>
                    }
                </div>
            </div>
        </div>

        <!-- Quadrant 2 -->
        <div class="col-md-6 mb-4">
            <div class="card border-warning h-100">
                <div class="card-header bg-warning text-dark fw-bold">
                    Quadrant 2 (Important / Not Urgent)
                </div>
                <div class="card-body">
                    @foreach (var t in q2)
                    {
                        <div class="mb-3 p-2 border rounded">
                            <strong>@t.TaskName</strong>
                        </div>
                    }
                    @if (!q2.Any())
                    {
                        <p class="text-muted">No tasks</p>
                    }
                </div>
            </div>
        </div>

        <!-- Quadrant 3 -->
        <div class="col-md-6 mb-4">
            <div class="card border-info h-100">
                <div class="card-header bg-info text-white fw-bold">
                    Quadrant 3 (Not Important / Urgent)
                </div>
                <div class="card-body">
                    @foreach (var t in q3)
                    {
                        <div class="mb-3 p-2 border rounded">
                            <strong>@t.TaskName</strong>
                        </div>
                    }
                    @if (!q3.Any())
                    {
                        <p class="text-muted">No tasks</p>
                    }
                </div>
            </div>
        </div>

        <!-- Quadrant 4 -->
        <div class="col-md-6 mb-4">
            <div class="card border-secondary h-100">
                <div class="card-header bg-secondary text-white fw-bold">
                    Quadrant 4 (Not Important / Not Urgent)
                </div>
